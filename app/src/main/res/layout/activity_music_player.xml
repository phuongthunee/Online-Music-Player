<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusicPlayer">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarMusicPlayer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="0dp"
        android:background="#00FFFFFF"
        android:gravity="center_horizontal"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="center"
        android:theme="?attr/actionBarTheme"/>

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

     <androidx.viewpager.widget.ViewPager
         android:id="@+id/viewPagerCD"
         android:layout_width="275dp"
         android:layout_height="275dp"
         android:layout_below="@+id/toolbarMusicPlayer"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="56dp" />

    <RelativeLayout
        android:id="@+id/rl_in4music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewPagerCD"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/textViewtenbaihatplaynhac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham_bold"
                android:maxWidth="310dp"
                android:text="TITLE"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/texttimePlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewtenbaihatplaynhac"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/gotham_bold"
                android:text="SINGER"
                android:textColor="#E4E4E4"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imagetimePlayer"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/likeicon"
                android:scaleType="fitXY"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />
        </RelativeLayout>

        <SeekBar
            android:id="@+id/seekBartime"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/rl_in4music"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:progressTint="#FFFFFF"
            android:thumb="@drawable/thumb"/>

        <RelativeLayout
            android:id="@+id/realtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBartime"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/textViewruntime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham_bold"
                android:text="RUNTIME"
                android:textColor="#E4E4E4"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewtimetotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/gotham_bold"
                android:text="TOTALTIME"
                android:textColor="#E8E8E8"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/realtime"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/shuffle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/previous"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="17dp"
                android:layout_marginBottom="5dp"
                android:layout_toStartOf="@+id/previous"
                android:background="@null"
                android:contentDescription="RANDOM PHAT NGAU NHIEN"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/shuffleicon" />

            <ImageButton
                android:id="@+id/previous"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/pause"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="23dp"
                android:layout_toStartOf="@+id/pause"
                android:background="@null"
                android:contentDescription="PREVIOUS"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/previousicon" />

            <ImageButton
                android:id="@+id/pause"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_centerInParent="true"
                android:background="@null"
                android:contentDescription="PAUSE"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/playandpause" />

            <ImageButton
                android:id="@+id/next"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/pause"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="62dp"
                android:layout_marginBottom="23dp"
                android:layout_toEndOf="@+id/pause"
                android:background="@null"
                android:contentDescription="NEXT"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/nexticon" />

            <ImageButton
                android:id="@+id/imageButtonlap"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/next"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:background="@null"
                android:contentDescription="REPEAT"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/repeaticon" />
        </RelativeLayout>
    </RelativeLayout>